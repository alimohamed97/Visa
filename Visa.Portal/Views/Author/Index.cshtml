    <script>
        $(function () {

            $(".x-Author").click(function () {

                var AuthorId = $(this).val();
                $.ajax({

                    type: "Post",
                    url: "/Author/GetAuthorById/",
                    data: { id: AuthorId },
                    success: function (res) {

         

                        $("#Id").val(res.Id);
                        $("#Name_Ar").val(res.Name_Ar);
                        $("#Name_En").val(res.Name_En);
                        $("#Brief_Ar").val(res.Brief_Ar);
                        $("#Brief_En").val(res.Brief_En);
                        $("#ImageName").val(res.ImageName);
                    }
                });

            });








        });

    </script>